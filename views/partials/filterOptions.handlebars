<div id="filterOption" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close" id="closeModal">&times;</span>
        <h2>Filter Options</h2>

        <label for="rating">Rating:</label>
        <div>
            <button id="decrementRating">-</button>
            <span id="ratingValue">0</span>
            <button id="incrementRating">+</button>
        </div>

        <label for="tags">Tags:</label>
        <input type="text" id="tags" placeholder="Enter a tag">

        <label for="timeFilter">Time:</label>
        <div>
            <input type="radio" id="lastDay" name="timeFilter" value="lastDay">
            <label for="lastDay">Last Day</label>
            <input type="radio" id="lastMonth" name="timeFilter" value="lastMonth">
            <label for="lastMonth">Last Month</label>
            <input type="radio" id="lastYear" name="timeFilter" value="lastYear">
            <label for="lastYear">Last Year</label>
        </div>

        <button id="applyFilters">Apply Filters</button>
        <button id="clearFilters">Clear Filters</button>
    </div>
</div>

