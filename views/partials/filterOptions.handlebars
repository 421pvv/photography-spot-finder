<h3>Filter Spots</h3>

<div class="filter-section">
  <label for="minRating">Min Rating:</label>
  <input type="range" id="minRating" name="minRating" min="0" step="0.1" max="10" value="0">
  <span id="minRatingValue">1</span>

  <label for="tags">Tags (comma separated):</label>
  <input type="text" id="tags" name="tags" placeholder="e.g. nature, sunset" value="{{tags}}">

  <div>
    <label for="fromDate">From Date:</label>
    <input id="fromDate" type="datetime-local" name="fromDate" value="{{fromDate}}">

    <label for="toDate">To Date:</label>
    <input id="toDate" type="datetime-local" name="toDate" value="{{toDate}}">
  </div>
</div>

<button type="button" id="clearFilterButton">Clear Filters</button>

<script>
  const minRatingInput = document.getElementById('minRating');
  const minRatingValue = document.getElementById('minRatingValue');
  minRatingInput.addEventListener('input', function () {
    minRatingValue.textContent = minRatingInput.value;
  });
</script>