<section>
  <h1 class="page_title">Sign Up</h1>
  <form action="users/signup" method="POST" class="mainForms" id="signup-form">
    <label>
      First Name
      <input type="text" name="firstName" placeholder="First Name" value="{{data.firstName}}" id="first-name" required>
    </label>

    <label>
      Last Name
      <input type="text" name="lastName" placeholder="Last Name" value="{{data.lastName}}" id="last-name" required>
    </label>

    <label>
      Username
      <input type="text" name="username" placeholder="Username" value="{{data.username}}" id="user-name" required>
    </label>

    <label>
      Password
      <input type="password" name="password" placeholder="Password" value="{{data.password}}" id="password" required>
    </label>
    <div id="form-errors-div">
      {{#if hasErrors}}
      <ul id="signup-form-errors">
        {{#each errors}}
        <li>
          {{this}}
        </li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
    <div class="form_buttons">
      <button type="submit">Sign up</button>
      <button type="reset" id="clear-signup-form">Clear Form</button>
    </div>
    <p>Already have an account? <a href="/users/login" id="login-here-link">Login here</a></p>
  </form>
</section>
<script src="/public/js/validation/signup_validation.js"></script>