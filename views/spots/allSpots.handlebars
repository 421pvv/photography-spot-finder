<div class="search-and-filter">
  <form action="/spots/search" method="get">
    <input type="text" name="keyword" placeholder="Search for spots..." value="{{keyword}}">
    <button type="submit">Search</button>
  </form>

  <button id="filterButton" onclick="toggleFilter()">Filter</button>
</div>

{{!-- Filter Options will appear when the filter button is clicked --}}
<div id="filterOptions" style="display: none;">
  {{> filterOptions }}
</div>

<section id="spotsList">
  {{#if spots.length}}
  <ul>
    {{#each spots}}
    <li>
      <h2>{{this.name}}</h2>
      <p>Rating: {{this.averageRating}}</p>
      <p>Accessibility: {{this.accessibility}}</p>
      <p>Best Times to Visit:
        {{#each this.bestTimes}} {{this}} {{/each}}
      </p>
      <p>Tags:
        {{#each this.tags}} <span>{{this}}</span> {{/each}}
      </p>
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>No spots available.</p>
  {{/if}}
</section>

<script>
  function toggleFilter() {
    const filterOptions = document.getElementById('filterOptions');
    filterOptions.style.display = filterOptions.style.display === 'none' ? 'block' : 'none';
  }
</script>