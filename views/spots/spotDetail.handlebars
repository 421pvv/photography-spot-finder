<article data-id="{{spot._id}}">
    <header>
        <h1 class="page_title">{{spot.spotName}}</h1>
    </header>
    <div id="summary-container">
        <section>
            <h2>Overview</h2>
            <p>Average Rating: <span>{{spot.averageRating}}</span></p>
            <p>Total Ratings: <span>{{spot.totalRatings}}</span></p>
            <p>Best Times: <span>{{spot.spotBestTimes}}</span></p>
            <p>Tags: <span>{{spot.spotTags}}</span></p>

        </section>

        <section>
            <h2>Poster</h2>
            <p>First name: <span>{{poster.firstName}}</span></p>
            <p>Last name: <span>{{poster.lastName}}</span></p>
            <p>Username: <span>{{poster.username}}</span></p>
            <p><a href="/users/profile/{{poster.username}}">View Profile</a></p>

            {{#if viewingUser.originalPoster}}
            <p><a href="/spots/edit/{{spot._id}}">Edit Spot</a></p>
            {{/if}}
        </section>
    </div>
    <section id="imageSection">
        <h2>Images</h2>
        <div id="spotImages">
            {{#if spot.spotImages}}
            {{#each spot.spotImages}}
            <img class="spotImage" alt="{{spot.spotName}} spot image" src="{{this.url}}"
                onerror="this.onerr=null; this.src='/public/images/no_image_avaliable.jpeg'">
            {{/each}}
            {{/if}}
        </div>
    </section>

    <section>
        <h2>Description</h2>

        {{#each spot.spotDescription}}
        <p>{{this}}</p>
        {{/each}}
    </section>

    <section>
        <h2>Accessibility</h2>
        {{#each spot.spotAccessibility}}
        <p>{{this}}</p>
        {{/each}}
    </section>

    <section>
        <h2>Location</h2>
        <div id="map"></div>
        <button id="mapRecenter">Recenter map</button>

    </section>

    {{#if viewingUser._id}}
    <div class="userInteractionsDiv">
        <section>
            <form>
                <h3> <label for="likeLink"> Favorite Spot </label>
                </h3>
                <button type="button" class="actionButton" id="likeLink" name="likeLink">

                    <i id="favoriteButton" class="fa fa-star {{viewingUser.favorite}}"></i>
                </button>

            </form>
        </section>
        <section>
            <form action="#">
                <h3> <label for="flagLink"> Flag Spot </label> </h3>
                <button type="button" class="actionButton" id="flagLink" name="flagLink">
                    <i id="spotFlagButton" data-id="{{spot._id}}" data-type="spot"
                        class="fa fa-flag {{viewingUser.flag}}"></i>
                </button>
            </form>
        </section>
    </div>
    <div class="userInteractionsDiv">
        <section>
            <h3>Add Comment</h3>

            <form action="/spots/addComment/{{spot._id}}" id="addCommentForm" method="POST" class="detailForms">
                <label for="commentInput">
                    Enter comment
                    {{#if addComment}}
                    <input name="message" type="text" value="{{addComment.message}}" id="commentInput">
                    {{else}}
                    <input name="message" type="text" value="" id="commentInput">
                    {{/if}}
                </label>
                <label id="imageUploadLabel">
                    Upload Image (optional)
                    <input type="button" id="upload_widget" class="cloudinary-button" value="Upload files">
                </label>

                <input type="hidden" name="image" id="commentImage" value="">
                <input type="hidden" name="orphanImages" id="removeImages" value="">

                <input type="submit" id="commentSubmit">

            </form>
            <div id="imageUploadPreviews">
                {{#if addComment}}
                {{#if addComment.image.public_id}}
                <div id="{{addComment.image.public_id}}" class="previewImageContainer">
                    <img src="{{addComment.image.url}}">
                    <span class="removeImageIcon">‚ùå</span>
                </div>
                {{/if}}
                {{/if}}

            </div>

            <div id="spotCommentErrors">
                {{#if addComment}}
                {{#if addComment.errors}}
                {{#each addComment.errors}}
                <p class="formInputError">{{this}}</p>
                {{/each}}
                {{/if}}
                {{/if}}
            </div>
        </section>

        <section>
            <h3>Update Rating</h3>

            <form action="/spots/putRating/{{spot._id}}" method="POST" id="putRatingForm" class="detailForms">
                {{#if viewingUser.rating}}
                {{else}}
                <h3>Rate Spot</h3>
                {{/if}}
                <label for="ratingSlider">
                    Rating Slider
                </label>

                {{#if viewingUser.rating}}
                <input name="rating" type="range" min="1" max="10" value="{{viewingUser.rating}}" id="ratingSlider"
                    step="0.1">
                <p id="rangeSliderDiaplay">Value: <span id="ratingSliderValue">{{viewingUser.rating}}</span></p>


                {{else}}
                <input name="rating" type="range" min="1" max="10" value="5" id="ratingSlider" step="0.1">
                <p id="rangeSliderDiaplay">Value: <span id="ratingSliderValue">5</span></p>
                {{/if}}

                <input type="submit" id="ratingSubmit">
            </form>

            <div id="spotRatingErrors">
            </div>
        </section>
    </div>
    {{/if}}

    <section>
        <h2>Comments</h2>

        <ul id="comments-list">
            {{#each comments}}
            <li>
                <div class="comment-item">
                    <div class="comment-content">
                        <p class="comment-main">{{this.message}}</p>
                        {{#if this.image}}
                        <img alt="{{this.poster.firstName}} {{this.poster.lastName}} comment image"
                            src="{{this.image.url}}"
                            onerror="this.onerr=null; this.src='/public/images/no_image_avaliable.jpeg">
                        {{/if}}
                    </div>
                    <div class="comment-meta ">
                        <p>Posted by {{this.poster.firstName}} {{this.poster.lastName}}</p>
                        <p>Posted at {{this.createdAt}}</p>
                        {{!-- <label hidden="true" for="flagButton"> Flag Comment </label> --}}
                        <i data-id="{{this._id}}" class="commentFlagButton fa fa-flag {{this.flag}}"></i>
                        {{/if}}
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </section>
</article>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script id="search-js" defer src="https://api.mapbox.com/search-js/v1.0.0-beta.21/web.js"></script>
<script src="https://api.mapbox.com/mapbox-gl-js/v3.3.0/mapbox-gl.js"></script>
<script
    src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.1-dev/mapbox-gl-geocoder.min.js"></script>


<script>
    // set up map
    const prev_lat = "{{spot.spotLatitude}}";
    const prev_long = "{{spot.spotLongitude}}";
    let setDefault = false;
    let defaultLoc;
    if (!isNaN(parseFloat(prev_lat)) && !isNaN(parseFloat(prev_long))) {
        defaultLoc = [parseFloat(prev_long), parseFloat(prev_lat)];

    }


    mapboxgl.accessToken = "{{apikey}}"
    let map;
    let marker;

    map = new mapboxgl.Map({
        container: 'map',
        center: defaultLoc,
        style: 'mapbox://styles/mapbox/satellite-v9',
        projection: "globe",
        zoom: 15
    });
    marker = new mapboxgl.Marker()
        .setLngLat(defaultLoc)
        .addTo(map);

    map.on('style.load', () => {
        map.setFog({});
    });


    $("#mapRecenter").click(() => {
        map.flyTo({
            center: defaultLoc,
            zoom: 15
        })
    })
</script>

